FROM java:8-jre
MAINTAINER Vladislav Vorobev <nowspamhere@gmail.com>
ARG CONFIG_GIT_URI
ARG CONFIG_GIT_USERNAME
ARG CONFIG_GIT_PASSWORD
ENV CONFIG_GIT_URI $CONFIG_GIT_URI
ENV CONFIG_GIT_USERNAME $CONFIG_GIT_USERNAME
ENV CONFIG_GIT_PASSWORD $CONFIG_GIT_PASSWORD
ENV CONFIG_SERVICE_PASSWORD 123

ADD ./build/config.jar /app/
CMD ["java", "-Xmx200m", "-jar", "/app/config.jar"]

EXPOSE 8888